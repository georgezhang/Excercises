@model IEnumerable<Excercises.Models.Question>

@{
    ViewBag.Title = "Index";
}

<h2>Questions of Exam @ViewBag.ExamName</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { ExamID = ViewBag.ExamID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hints)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hints)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QuestionID, ExamID=item.Exam.ExamID }) |
            @Html.ActionLink("Details", "Details", new { id=item.QuestionID, ExamID = item.Exam.ExamID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.QuestionID, ExamID = item.Exam.ExamID })
        </td>
    </tr>
}

</table>
