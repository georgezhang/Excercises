@model Excercises.Models.TakeExamViewModels

@{
    ViewBag.Title = "Testing...";
}

<h2>Exam of @Model.exam.Name</h2>
<h3>Question:</h3>
<p>@Model.question.QuestionText</p>
<i>@Model.question.Hints</i>
@using (Html.BeginForm("SubmitAnswer", "TakeExam"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("ExamID", Model.exam.ExamID)
    @Html.Hidden("QuestionID", Model.question.QuestionID)

    @Html.TextArea("MyAnswer", Model.questionTaken == null ? "":Model.questionTaken.MyAnswer, new { @class = "form-control" })

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}